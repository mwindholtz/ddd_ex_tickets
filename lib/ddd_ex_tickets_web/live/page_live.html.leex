  <h1><%= gettext "Welcome to %{name}!", name: "DddExTickets" %></h1>
  <p>Simple Example of DDD Bounded Contexts and Aggregates implemented in Phoenix LiveView</p>

<section class="phx-hero">
  <h1>Tickets Requested</h1>
  <form phx-submit="request">
    <input type="text" name="tickets_requested" value="<%= @tickets_requested %>" placeholder="Number of Tickets" list="results" autocomplete="off"/>
    <datalist id="results">
      <%= for {app, _vsn} <- @results do %>
        <option value="<%= app %>"><%= app %></option>
      <% end %>
    </datalist>
    <button type="submit" phx-disable-with="Updating...">Change Ticket Count</button>
  </form>
</section>


<section class="phx-hero">
  <h1>Tickets</h1>
  <h2>Remaining: <%= @remaining_count %></h2>
</section>


<section class="row">
  <article class="column">
    <h2>Resources</h2>
    <ul>
      <li>
        <a href="https://github.com/mwindholtz/ddd_ex_tickets">Github Repo &amp; Docs</a>
      </li>
    </ul>
  </article>
</section>
